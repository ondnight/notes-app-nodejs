<div class="container mt-4">
   
   <div class="row">
      <div class="col-md-5 offset-md-3">
         <div class="card card-body bg-dark p-4 text-white">

            <h3 class="text-center">Edita tu tarea</h3>
            <form action="/notes/edit/{{note._id}}" method="post">

               <div class="mb-3">
                  <label for="title">Título</label>
                  <input type="text" name="title" id="title" placeholder="Título" value="{{note.title}}"
                     class="form-control rounded-0 bg-dark text-white mt-3">
               </div>

               <div class="mb-3">
                  <label for="description">Descripción</label>
                  <textarea name="description" id="description" cols="30" rows="5" placeholder="Escribe la descripción"
                     class="form-control rounded-0 bg-dark text-white mt-3">{{note.description}}

   </textarea>
               </div>

               <button class="btn btn-primary mt-3">Update</button>


            </form>

         </div>
      </div>
   </div>
</div>